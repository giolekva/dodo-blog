{
	"$schema": "https://d.p.v1.dodo.cloud/schemas/gio/app.schema.json",
	"app": {
		"ingress": {
			"auth": {
				"enabled": true,
				"noAuthPathPatterns": [
					"^/_next/.*$",
					"^/$",
					"^/entry/.*$"
				],
				"groups": "pr"
			},
			"network": "Private",
			"subdomain": "blog"
		},
		"type": "nextjs:deno-2.0.0",
		"postgresql": [{
			"name": "db",
			"size": "1Gi"
		}],
		"preBuildCommands": [{
			"bin": "/usr/bin/deno",
			"args": ["run", "-A", "npm:prisma", "migrate", "dev"]
		}]
	}
}